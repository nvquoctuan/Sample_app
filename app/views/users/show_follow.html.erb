<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
      <span><%= link_to t(".link"), @user %></span>
      <span><%= t ".micropost_html", count: @user.microposts.size %></span>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= link_to gravatar_for(user, size: Settings.size.s_30), user %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users_right.any? %>
      <ul class="users follow">
        <%= render partial: "user", collection: @users_right %>
      </ul>
      <%= will_paginate @users_right %>
    <% end %>
  </div>
</div>
