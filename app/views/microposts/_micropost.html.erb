<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Settings.size.s_50), micropost.user %>
  <span class="user"><%= link_to micropost.user_name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.picture.variant resize:
                  Settings.resizie_limit if micropost.picture.attached? %>
  </span>
  <span class="timestamp">
    <%= t ".time_posted", time: time_ago_in_words(micropost.created_at) %>
    <% if current_user? micropost.user %>
      <%= link_to t(".delete"), micropost, method: :delete,
                                "data-confirm": t(".question") %>
    <% end %>
  </span>
</li>
