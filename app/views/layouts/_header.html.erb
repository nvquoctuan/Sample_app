<header class="navbar navbar-fixed-top navbar-inverse">
  <div class = "container">
    <%= link_to "sample app", root_path, id: "logo", class: "navbar-brand" %>
    <nav class="navbar navbar-expand-lg navbar-light">
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class = "nav-item"><%= link_to t(".home") , root_path, class: "nav-link" %></li>
          <li class = "nav-item"><%= link_to t(".help"), help_path, class: "nav-link" %></li>
          <% if logged_in? %>
            <li><%= link_to t(".users"), "#", class: "nav-link" %></li>
            <li class="dropdown">
              <%= link_to t(".link_dropdown_html"), "#", "data-toggle" => "dropdown" %>
              <ul class="dropdown-menu">
                <li><%= link_to t(".profile"), current_user %></li>
                <li><%= link_to t(".setting"), "#" %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to t(".logout"), logout_path, method: :delete %>
                </li>
              </ul>
            </li>
          <% else %>
            <li class = "nav-item"><%= link_to t(".login"), login_path, class: "nav-link" %></li>
          <% end %>
          <li class = "nav-item">
            <% locale = [{id: "vi", name: ".lang_vi"}, {id: "en", name: ".lang_en"}] %>
            <%= form_for :"", method: :get do |f| %>
            <%= select_tag "locale", options_for_select(locale.collect{|u| [t(u[:name]), u[:id]]}, selected: params[:locale]), onchange: "this.form.submit()" %>
            <% end %>
          </li>
        </ul>
      </div>
    </nav>
  </div>
</header>
